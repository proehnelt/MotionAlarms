<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/new_alarm"
            android:layout_width="210dp"
            android:layout_height="100dp"
            android:text="New Alarm" />

        <Button
            android:id="@+id/new_timer"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:text="New Timer" />

    </TableRow>

    <Button
        android:id="@+id/move_reminder"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:text="Edit Move Reminder" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="63dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="Time until move reminder"
        android:textAlignment="center"
        android:textSize="24sp" />

    <ProgressBar
        android:id="@+id/move_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/circle_background"
        android:indeterminate="false"
        android:progressBackgroundTint="#8B8888"
        android:progressDrawable="@drawable/circle" />

</LinearLayout>