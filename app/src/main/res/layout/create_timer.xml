<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <Button
            android:id="@+id/timer_back"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Back" />

        <Space
            android:layout_width="210dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/create_new_timer"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="Create" />
    </TableRow>

    <Space
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:text="Hour(s)"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Minute(s)"
            android:textAlignment="center"
            android:textSize="18sp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="50dp">

        <Spinner
            android:id="@+id/timer_hour"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:entries="@array/timer_hours" />

        <Spinner
            android:id="@+id/timer_minute"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:entries="@array/timer_minutes" />

    </TableRow>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <EditText
        android:id="@+id/timer_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Optional Message"
        android:inputType="textPersonName" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <CheckBox
        android:id="@+id/timer_use_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Use Location" />

</LinearLayout>